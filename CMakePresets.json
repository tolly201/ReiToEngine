{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "macos-clang-debug",
      "displayName": "macOS Clang Debug",
      "description": "Builds with Clang on macOS in Debug mode.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/MacOS_CLANG-MacOS-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
        "CMAKE_CXX_FLAGS_DEBUG": "-ggdb -g -O0",

        "CMAKE_PROJECT_SOURCE_OUTPUT_DIRECTORY": "${sourceDir}/builds/${presetName}/ReiToEngine/"
      },
        "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
    },
    {
      "name": "macos-clang-debug-test",
      "displayName": "macOS Clang Debug (with Tests)",
      "description": "Debug build with tests enabled.",
      "inherits": "macos-clang-debug",
      "cacheVariables": {
        "RT_ENABLE_TESTS": "ON"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
    },
    {
      "name": "macos-clang-release",
      "displayName": "macOS Clang Release",
      "inherits": "macos-clang-debug",
      "binaryDir": "${sourceDir}/build/macos-clang-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_ASAN": "OFF"
      }
    },
    {
      "name": "macos-cross-win-mingw",
      "displayName": "macOS -> Windows (MinGW)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/MacOS_CLANG-Windows-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -DUNICODE -D_UNICODE -D_CRT_SECURE_NO_WARNINGS -m64",
        "CMAKE_CXX_FLAGS_DEBUG": "-ggdb -g -O0",
        "CMAKE_CXX_FLAGS_RELEASE": "-O2",
        "CMAKE_PROJECT_SOURCE_OUTPUT_DIRECTORY": "${sourceDir}/builds/${presetName}/ReiToEngine/"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
    },
    {
      "name": "macos-cross-linux-musl",
      "displayName": "macOS -> Linux (musl)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/macos-cross-linux",
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/MacOS_CLANG-Linux-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_LLD": "OFF"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
    },
    {
      "name": "windows-msvc-x64",
      "displayName": "Windows MSVC x64",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "architecture": { "value": "x64" },
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/Windows_MSVC-Windows-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/W4 /EHsc /source-charset:utf-8 /DUNICODE /D_UNICODE /D_CRT_SECURE_NO_WARNINGS",
        "CMAKE_CXX_FLAGS_DEBUG": "/Zi /Od /MDd",
        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /MD",
        "CMAKE_PROJECT_SOURCE_OUTPUT_DIRECTORY": "${sourceDir}/builds/${presetName}/ReiToEngine/"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" }
    },
    {
      "name": "windows-msvc-x64-test",
      "displayName": "Windows MSVC x64 (with Tests)",
      "inherits": "windows-msvc-x64",
      "cacheVariables": {
        "RT_ENABLE_TESTS": "ON"
      }
    },
    {
      "name": "windows-llvm-x64",
      "displayName": "Windows LLVM Clang x64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/Windows_LLVM-Windows-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -DUNICODE -D_UNICODE -D_CRT_SECURE_NO_WARNINGS -m64",
        "CMAKE_CXX_FLAGS_DEBUG": "-ggdb -g -O0",
        "CMAKE_CXX_FLAGS_RELEASE": "-O2",
        "CMAKE_PROJECT_SOURCE_OUTPUT_DIRECTORY": "${sourceDir}/builds/${presetName}/ReiToEngine/"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" }
    },
    {
      "name": "windows-llvm-x64-test",
      "displayName": "Windows LLVM Clang x64 with Tests",
      "inherits": "windows-llvm-x64",
      "cacheVariables": {
        "RT_ENABLE_TESTS": "ON"
      }
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_LLD": "OFF",
        "USE_ASAN": "ON"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" }
    }
  ],
  "buildPresets": [
  {"name": "macos-clang-debug", "configurePreset": "macos-clang-debug"},
  {"name": "macos-clang-debug-test", "configurePreset": "macos-clang-debug-test"},
    { "name": "macos-clang-release", "configurePreset": "macos-clang-release" },
    { "name": "macos-cross-win-mingw", "configurePreset": "macos-cross-win-mingw" },
    { "name": "macos-cross-linux-musl", "configurePreset": "macos-cross-linux-musl" },
    { "name": "windows-msvc-x64", "configurePreset": "windows-msvc-x64" },
    { "name": "windows-msvc-x64-test", "configurePreset": "windows-msvc-x64-test", "configuration": "Debug" },
    { "name": "windows-llvm-x64", "configurePreset": "windows-llvm-x64" },
    { "name": "windows-llvm-x64-test", "configurePreset": "windows-llvm-x64-test" },
    { "name": "linux-clang-debug", "configurePreset": "linux-clang-debug" }
  ],
  "testPresets": [
    {
      "name": "macos-test-all",
      "displayName": "Run all tests (macOS Debug)",
      "description": "Runs all tests built with the macos-clang-debug-tests preset.",
      "configurePreset": "macos-clang-debug-test",
      "execution": { "jobs": 8 }
    },
    {
      "name": "windows-llvm-test-all",
      "displayName": "Run all tests (Windows LLVM Debug)",
      "description": "Runs all tests built with the windows-llvm-x64-test preset.",
      "configurePreset": "windows-llvm-x64-test",
      "execution": { "jobs": 8 }
    },
    {
      "name": "windows-msvc-test-all",
      "displayName": "Run all tests (Windows MSVC Debug)",
      "description": "Runs all tests built with the windows-msvc-x64-tests preset.",
      "configurePreset": "windows-msvc-x64-test",
      "configuration": "Debug",
      "execution": { "jobs": 8 }
    }
  ]
}
