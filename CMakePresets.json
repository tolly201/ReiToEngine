{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "macos-clang-debug",
      "displayName": "macOS Clang Debug",
      "description": "Builds with Clang on macOS in Debug mode.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/MacOS_CLANG-MacOS-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic",
        "CMAKE_CXX_FLAGS_DEBUG": "-ggdb -g -O0",

        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/builds/${presetName}/out/bin/",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/builds/${presetName}/out/lib/"
      }
    },
    {
      "name": "macos-clang-release",
      "displayName": "macOS Clang Release",
      "inherits": "macos-clang-debug",
      "binaryDir": "${sourceDir}/build/macos-clang-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "USE_ASAN": "OFF"
      }
    },
    {
      "name": "macos-cross-win-mingw",
      "displayName": "macOS -> Windows (MinGW)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/macos-cross-win",
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/MacOS_CLANG-Windows-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_LLD": "OFF"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
    },
    {
      "name": "macos-cross-linux-musl",
      "displayName": "macOS -> Linux (musl)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/macos-cross-linux",
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/MacOS_CLANG-Linux-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_LLD": "OFF"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Darwin" }
    },
    {
      "name": "windows-msvc-x64-debug",
      "displayName": "Windows MSVC x64 Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-msvc-x64-debug",
      "architecture": { "value": "x64" },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_LLD": "OFF",
        "USE_ASAN": "OFF"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" }
    },
    {
      "name": "windows-msys2-clang64",
      "displayName": "Windows MSYS2 Clang64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows-msys2-clang64",
      "toolchainFile": "${sourceDir}/Engine/Scripts/cmake_toolchain/Windows_MSYS2-Windows-toolchain.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_LLD": "OFF",
        "USE_ASAN": "OFF"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Windows" }
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "USE_LLD": "OFF",
        "USE_ASAN": "ON"
      },
      "condition": { "type": "equals", "lhs": "${hostSystemName}", "rhs": "Linux" }
    }
  ],
  "buildPresets": [
    {"name": "macos-clang-debug", "configurePreset": "macos-clang-debug"},
    { "name": "macos-clang-release", "configurePreset": "macos-clang-release" },
    { "name": "macos-cross-win-mingw", "configurePreset": "macos-cross-win-mingw" },
    { "name": "macos-cross-linux-musl", "configurePreset": "macos-cross-linux-musl" },
    { "name": "windows-msvc-x64-debug", "configurePreset": "windows-msvc-x64-debug" },
    { "name": "windows-msys2-clang64", "configurePreset": "windows-msys2-clang64" },
    { "name": "linux-clang-debug", "configurePreset": "linux-clang-debug" }
  ],
  "testPresets": []
}
