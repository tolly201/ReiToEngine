        "span": "cpp",
        "stack": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "unordered_map": "cpp",
        "unordered_set": "cpp",
        "valarray": "cpp",
        "rope": "cpp",
        "slist": "cpp",
        "format": "cpp",
        "ranges": "cpp",
        "stacktrace": "cpp",
        "__mutex_base": "cpp",
        "forward_list": "cpp",
        "functional": "cpp",
        "__bits": "cpp",
