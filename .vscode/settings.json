        "__locale": "cpp",
        "__std_stream": "cpp",
        "__threading_support": "cpp",
        "__tuple": "cpp",
        "__verbose_abort": "cpp",
        "any": "cpp",
        "bit": "cpp",
        "cctype": "cpp",
